<Window x:Class="Edda.Windows.AdvancedHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced History" Height="500" Width="440" MinWidth="440">
    <Grid>
        <ListView x:Name="HistoryListBox" Margin="10" MouseDoubleClick="HistoryListBox_MouseDoubleClick">
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" DisplayMemberBinding="{Binding Index}" Width="40"/>
                    <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Action}" Width="120"/>
                    <GridViewColumn Header="Drum" DisplayMemberBinding="{Binding Drum}" Width="80"/>
                    <GridViewColumn Header="Beat" DisplayMemberBinding="{Binding Beat}" Width="60"/>
                    <GridViewColumn Header="Timestamp" DisplayMemberBinding="{Binding Timestamp}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
