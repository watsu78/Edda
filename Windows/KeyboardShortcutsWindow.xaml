<Window x:Class="Edda.KeyboardShortcutsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Keyboard Shortcuts" Width="520" Height="560" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Bottom" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" BorderThickness="0, 1, 0, 0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
                        <GradientStop Color="{DynamicResource {x:Static SystemColors.ControlDarkColorKey}}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <Button x:Name="btnClose" Margin="0 10 10 10" Width="80" HorizontalAlignment="Right" Click="BtnClose_Click">Close</Button>
                </StackPanel>
            </Border>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10 10 10 10">
                <StackPanel>
                    <TextBlock Text="General" FontWeight="Bold" FontSize="16" Margin="0 0 0 8"/>
                    <Grid Margin="0 0 0 16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="New Map"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Ctrl+N"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Open Map"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+O"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Save Map"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+S"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Import Map"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+I"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Export Map"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Ctrl+E"/>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Close Map"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="Ctrl+W"/>
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Toggle Left Sidebar"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="Ctrl+["/>
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Toggle Right Sidebar"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="Ctrl+]"/>
                    </Grid>
                        <TextBlock Text="Editing" FontWeight="Bold" FontSize="16" Margin="0 0 0 8"/>
                        <Grid Margin="0 8 0 16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Add Note (Column 1â€“4)"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="1 / 2 / 3 / 4"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Add Bookmark"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Ctrl+B"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Add Timing Change"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Ctrl+T"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Add Grid-Snapped Timing Change"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Ctrl+Shift+T"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Undo / Redo"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="Ctrl+Z / Ctrl+Y"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Cut / Copy / Paste"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="Ctrl+X / Ctrl+C / Ctrl+V"/>
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Paste On Column"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="Ctrl+Shift+V"/>
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Select All"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="Ctrl+A"/>
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Mirror Selected"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="Ctrl+M"/>
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Quantize Selected"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="Ctrl+Q"/>
                            <TextBlock Grid.Row="10" Grid.Column="0" Text="Snap Notes to Grid"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" Text="Ctrl+G"/>
                            <TextBlock Grid.Row="11" Grid.Column="0" Text="Delete Selected Notes"/>
                            <TextBlock Grid.Row="11" Grid.Column="1" Text="Delete"/>
                            <TextBlock Grid.Row="12" Grid.Column="0" Text="Unselect All Notes"/>
                            <TextBlock Grid.Row="12" Grid.Column="1" Text="Escape"/>
                            <TextBlock Grid.Row="13" Grid.Column="0" Text="Move Selection Up/Down (Beat)"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" Text="Shift+Up / Shift+Down"/>
                            <TextBlock Grid.Row="14" Grid.Column="0" Text="Move Selection Up/Down (Grid)"/>
                            <TextBlock Grid.Row="14" Grid.Column="1" Text="Ctrl+Up / Ctrl+Down"/>
                            <TextBlock Grid.Row="15" Grid.Column="0" Text="Move Selection Left/Right (Column)"/>
                            <TextBlock Grid.Row="15" Grid.Column="1" Text="Shift+Left/Right or Ctrl+Left/Right"/>
                        </Grid>
                    <TextBlock Text="Playback" FontWeight="Bold" FontSize="16" Margin="0 0 0 8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Play/Pause"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Space"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
